#!/bin/bash
# 
# Autor: Christian Daniel Avila SÃ¡nchez
# June 22th 2014
# Upload a json file to database test
# Arg[1] = json file to load to dabase
#

log="InsertLog"
date > $log

echo "Reading file... " $1

while read line           
do
    echo $line > temp
    curl -X POST http://127.0.0.1:5984/test -d @temp -H "Content-Type: application/json" >> $log
done < $1

date >> $log	


